{
  "name": "roam-web",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:server": "bun --watch server.ts",
    "dev:client": "vite",
    "start": "bun server.ts",
    "build:css": "tailwindcss -i input.css -o static/styles.css",
    "build:tailwind": "tailwindcss -i client/src/index.css -o client/src/styles-built.css --watch",
    "build:server": "bun build server.ts --outdir ./dist",
    "build:client": "vite build",
    "build": "bun run build:client && bun run build:server",
    "preview": "vite preview",
    "test": "bun test",
    "test:unit": "bun test test/simple-unit.test.ts",
    "test:vitest": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "typecheck:client": "cd client && tsc --noEmit",
    "typecheck:server": "tsc --noEmit --skipLibCheck server.ts",
    "typecheck:basic": "cd client && tsc --noEmit --skipLibCheck --noUnusedLocals false --noUnusedParameters false",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write"
    ],
    "*.{js,jsx}": [
      "biome check --write"
    ],
    "*.{json,md,css}": [
      "biome format --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-onboarding": "^9.1.3",
    "@storybook/addon-vitest": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "latest",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "storybook": "^9.1.3",
    "tailwindcss": "^3.4.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@iconify/react": "^6.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@shikijs/rehype": "^3.12.0",
    "@tanstack/react-query": "^5.85.5",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "get-port-please": "^3.2.0",
    "hono": "^4.9.4",
    "katex": "^0.16.22",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.8.2",
    "react-use": "^17.6.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "shiki": "^3.12.0",
    "tailwind-merge": "^3.3.1",
    "unified": "^11.0.5",
    "uniorg": "^1.3.0",
    "uniorg-parse": "^3.2.0",
    "uniorg-rehype": "^2.2.0"
  }
}
